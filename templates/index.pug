extends base.pug

block content

    div
        div(class="jumbotron")
            h2="a tale of seeker"
            p(class="lead")="thoughts. experiments. fails. more."
            !=content

    div(class="row marketing")
        div(class="col-lg-12")
            ul(class="post-list")
                each post,cnt in data.posts
                    li
                        a(href=post.link)
                            h4
                                !=post.title
                                time(class="text-muted")=" / Published " + post.date
